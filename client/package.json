    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-exo": "0.18.37",
    "react-exo-ui": "workspace:*",
    "react-native": "^0.80.2",
    "react-native-random-values-jsi-helper": "^2.0.1",
