{
  "name": "client",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "conc -c 'auto' 'pnpm:start:*'",
    "build": "conc -c 'auto' -g 'pnpm:build:*'",
    "build:web": "vite build",
    "build:android": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
    "build:ios": "react-native bundle --platform ios --dev false --entry-file index.js --bundle-output ios/main.jsbundle --assets-dest ios",
    "start:web": "vite dev --port 8181 --host",
    "start:native": "react-native start --reset-cache",
    "generate:pods": "pod install --project-directory=ios",
    "generate:icons": "react-native-svg-app-icon generate --background-path ../design/brand/logo-bg.svg --foreground-path ../design/brand/logo.svg"
  },
  "dependencies": {
    "@evolu/common": "6.0.1-preview.17",
    "@evolu/react": "9.0.1-preview.3",
    "@evolu/react-native": "12.0.1-preview.3",
    "@evolu/react-web": "1.0.1-preview.2",
    "@lingui/core": "^5.4.0",
    "@lingui/macro": "^5.4.0",
    "@lingui/react": "^5.4.0",
    "@noriginmedia/norigin-spatial-navigation": "^2.3.0",
    "@op-engineering/op-sqlite": "14.1.3",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-native-picker/picker": "^2.11.1",
    "blo": "^2.0.0",
    "burnt": "^0.13.0",
    "config": "workspace:*",
    "design": "workspace:react-exo-ui@*",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-exo": "0.18.37",
    "react-exo-ui": "workspace:*",
    "react-native": "0.80.2",
    "react-native-edge-to-edge": "^1.6.2",
    "react-native-gesture-handler": "^2.27.2",
    "react-native-mmkv": "^3.3.0",
    "react-native-nitro-modules": "^0.27.3",
    "react-native-quick-crypto": "0.7.17",
    "react-native-random-values-jsi-helper": "^2.0.1",
    "react-native-svg": "^15.12.1",
    "react-native-svg-app-icon": "^0.6.1",
    "react-native-unistyles": "^3.0.7",
    "react-native-url-polyfill": "^2.0.0",
    "react-native-web": "^0.21.0"
  },
  "devDependencies": {
    "@react-native/codegen": "0.80.2",
    "@react-native/gradle-plugin": "0.80.2",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "typescript": "^5.9.2"
  },
  "browserslist": {
    "production": ">0.2%, not dead, not op_mini all",
    "development": "last 2 versions"
  }
}
