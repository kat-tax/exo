{
  "package": {
    "productName": "exo-desktop",
    "version": "0.0.0"
  },
  "build": {
    "devPath": "http://localhost:6206",
    "distDir": "../../output/client/web"
  },
  "tauri": {
    "windows": [
      {
        "title": "EXO",
        "width": 800,
        "height": 600
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.exo.desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "security": {
      "csp": null
    }
  }
}
