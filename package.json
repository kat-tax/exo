{
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "ult-start",
    "build": "ult-build",
    "web": "ult-run web",
    "ios": "ult-run ios",
    "android": "ult-run android",
    "client:start": "pnpm -F ./client run start",
    "client:build": "pnpm -F ./client run build",
    "translate:start": "conc -P 'pnpm:translate:extract {1}' 'pnpm:translate:compile {1}' -- --watch",
    "translate:extract": "lingui extract --clean --config ./build/config/lingui.ts",
    "translate:compile": "lingui compile --config ./build/config/lingui.ts",
    "generate": "pnpm -F ./build/config build && pnpm translate:extract && pnpm translate:compile",
    "prebuild": "pnpm generate",
    "postinstall": "pnpm generate"
  },
  "devDependencies": {
    "@lingui/cli": "^5.3.3",
    "concurrently": "^9.2.0",
    "ult-scripts": "workspace:*"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.13.1"
}
