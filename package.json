{
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "conc -c 'auto' 'pnpm:*-dev'",
    "build": "conc -c 'auto' -g 'pnpm:*-build'",
    "generate": "pnpm toolkit-cfg-build && pnpm translate-build && pnpm toolkit-web-build && pnpm library-build && pnpm design-build",

    "toolkit-cfg-dev": "pnpm --filter ./toolkit/config dev",
    "toolkit-cfg-build": "pnpm --filter ./toolkit/config build",
    "toolkit-web-build": "pnpm --filter ./toolkit/web build",

    "translate-dev": "conc -P 'pnpm:translate-extract {1}' 'pnpm:translate-compile {1}' -- --watch",
    "translate-build": "pnpm run translate-extract && pnpm run translate-compile",
    "translate-extract": "lingui extract --config ./toolkit/config/lingui.ts",
    "translate-compile": "lingui compile --config ./toolkit/config/lingui.ts",

    "library-dev": "pnpm --filter ./library dev",
    "library-build": "pnpm --filter ./library build",
    "library-publish": "pnpm --filter ./library publish",

    "design-dev": "pnpm --filter ./design dev",
    "design-build": "pnpm --filter ./design build",
    "design-publish": "pnpm --filter ./design publish",

    "web-dev": "pnpm --filter ./client run dev",
    "web-build": "pnpm --filter ./client run build",

    "native-dev": "pnpm --filter ./toolkit/native run start",
    "native-vision-dev": "pnpm --filter ./toolkit/native run start-vision",
    "android": "pnpm --filter ./toolkit/native run android",
    "android-tv": "pnpm --filter ./toolkit/native run android-tv",
    "ios": "pnpm --filter ./toolkit/native run ios",
    "tvos": "pnpm --filter ./toolkit/native run tvos",
    "macos": "pnpm --filter ./toolkit/native run macos",
    "visionos": "pnpm --filter ./toolkit/native run visionos",
    "windows": "pnpm --filter ./toolkit/native run windows",

    "docs-dev": "pnpm --filter ./toolkit/vocs dev",
    "docs-build": "pnpm --filter ./toolkit/vocs build",

    "storybook-dev": "conc pnpm:storybook-web pnpm:storybook-native",
    "storybook-build": "pnpm --filter ./toolkit/storybook/web run build",
    "storybook-native": "pnpm --filter ./toolkit/storybook/native run dev",
    "storybook-web": "pnpm --filter ./toolkit/storybook/web run dev",

    "postinstall": "pnpm generate"
  },
  "devDependencies": {
    "@lingui/cli": "latest",
    "concurrently": "latest"
  },
  "resolutions": {
    "@swc/core": "1.3.56"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.14.0",
  "workspaces": [
    "client/**",
    "design/**",
    "library/**",
    "locales/**",
    "toolkit/**",
    "!**/test/**"
  ]
}
