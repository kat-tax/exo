{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src"],
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2022"],
    "types": ["node"],
    "module": "preserve",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "declaration": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "isolatedDeclarations": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true
  }
}
